<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DaeFragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DaeFragment">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <TableRow>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:text="DAE"/>
                <EditText
                    android:id="@+id/ET_dae"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:text="garze non sterili"/>
                <EditText
                    android:id="@+id/ET_garze_non_sterili"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:text="piastre_monouso"/>
                <EditText
                    android:id="@+id/ET_piastre_monouso"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:text="rasoio"/>
                <EditText
                    android:id="@+id/ET_rasoio"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0"
                    />
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:layout_gravity="center"
                    android:id="@+id/B_save"/>
            </TableRow>

        </TableLayout>


    </FrameLayout>

